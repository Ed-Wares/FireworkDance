{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Build and Debug",
            "type": "cppdbg",
            "request": "launch",
            // IMPORTANT: Update 'YourExecutableName.exe' to your actual target name from CMakeLists.txt
            "program": "${workspaceFolder}/build/FireworkDance.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            // IMPORTANT: Update this path to your gdb.exe location
            "miDebuggerPath": "C:/msys64/ucrt64/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            // This is the crucial link to your build task
            "preLaunchTask": "Build & Configure (Debug)"
        }
    ]
}